{
  "openapi": "3.0.1",
  "info": {
    "title": "Nozomi",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://localhost:3000"
    }
  ],
  "components": {
    "schemas": {
      "Id": {
        "type": "number",
        "example": 1
      },
      "CommonResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "example": "200"
          },
          "msg": {
            "type": "string",
            "example": "XXXXXXX"
          },
          "data": {
            "type": "object",
            "description": "公用的data字段"
          }
        }
      },
      "PaginationData": {
        "type": "object",
        "properties": {
          "count": {
            "type": "number",
            "example": 15
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "example": "400"
          },
          "msg": {
            "type": "string",
            "example": "XXXXXXX"
          },
          "data": {
            "description": "任意值",
            "additionalProperties": true
          }
        }
      },
      "ArticleData": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/Id"
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "picture": {
            "type": "string"
          }
        },
        "required": ["id", "title", "content", "created_at", "updated_at"]
      },
      "ArticleResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "$ref": "#/components/schemas/ArticleData"
              }
            }
          }
        ]
      },
      "ArticleListResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "pagination": {
                    "$ref": "#/components/schemas/PaginationData"
                  },
                  "data": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/ArticleData"
                    }
                  }
                }
              }
            }
          }
        ]
      },
      "AnnouncementData": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/Id"
          },
          "content": {
            "type": "string"
          },
          "announcement_time": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          }
        }
      },
      "AddAnnouncementData": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "announcement_time": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          }
        },
        "required": ["content", "announcement_time", "icon"]
      },
      "UpdateAnnouncementData": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "announcement_time": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          }
        },
        "required": ["content", "announcement_time", "icon"]
      },
      "AnnouncementListResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/AnnouncementData"
                }
              }
            }
          }
        ]
      },
      "AddAnnouncementResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "$ref": "#/components/schemas/AnnouncementData"
              }
            }
          }
        ]
      },
      "UpdateAnnouncementResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "id": {
                    "$ref": "#/components/schemas/Id"
                  }
                }
              }
            }
          }
        ]
      },
      "DeleteAnnouncementResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "id": {
                    "$ref": "#/components/schemas/Id"
                  }
                }
              }
            }
          }
        ]
      }
    }
  },
  "paths": {
    "/miku/announcements-list": {
      "get": {
        "summary": "获取公告列表",
        "tags": ["announcement"],
        "operationId": "getAnnouncementsList",
        "responses": {
          "200": {
            "description": "获取所有公告",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AnnouncementListResponse"
                }
              }
            }
          },
          "400": {
            "description": "获取失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/miku/announcement": {
      "post": {
        "summary": "新增公告",
        "tags": ["announcement"],
        "operationId": "addAnnouncement",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddAnnouncementData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "新增公告成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddAnnouncementResponse"
                }
              }
            }
          },
          "400": {
            "description": "新增公告失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "修改公告",
        "tags": ["announcement"],
        "operationId": "updateAnnouncement",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the announcement to update",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateAnnouncementData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "修改公告成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateAnnouncementResponse"
                }
              }
            }
          },
          "400": {
            "description": "修改公告失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "删除公告",
        "tags": ["announcement"],
        "operationId": "deleteAnnouncement",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the announcement to delete",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "删除公告成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeleteAnnouncementResponse"
                }
              }
            }
          },
          "400": {
            "description": "删除公告失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/miku/articles-list": {
      "get": {
        "summary": "获取文章列表",
        "tags": ["article"],
        "operationId": "getArticleList",
        "responses": {
          "200": {
            "description": "获取所有文章",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticleListResponse"
                }
              }
            }
          },
          "400": {
            "description": "获取失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/miku/article": {
      "get": {
        "summary": "获取文章",
        "tags": ["article"],
        "operationId": "getArticle",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "description": "The unique identifier of the account",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "获取文章成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticleResponse"
                }
              }
            }
          },
          "400": {
            "description": "获取文章失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  }
}
