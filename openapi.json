{
  "openapi": "3.0.1",
  "info": {
    "title": "Nozomi",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://localhost:3000"
    }
  ],
  "components": {
    "schemas": {
      "Id": {
        "type": "number",
        "example": 1
      },
      "CommonResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "example": "200"
          },
          "msg": {
            "type": "string",
            "example": "XXXXXXX"
          },
          "data": {
            "type": "object",
            "description": "公用的data字段"
          }
        }
      },
      "paginationData": {
        "type": "object",
        "properties": {
          "count": {
            "type": "number",
            "example": 15
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "example": "400"
          },
          "msg": {
            "type": "string",
            "example": "XXXXXXX"
          },
          "data": {
            "description": "任意值",
            "additionalProperties": true
          }
        }
      },
      "UserRegister": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "testUser"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        },
        "required": ["username", "password"]
      },
      "UserLogin": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "testUser"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        },
        "required": ["username", "password"]
      },
      "UserToken": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        },
        "required": ["token"]
      },
      "RegisterResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "id": {
                    "$ref": "#/components/schemas/Id"
                  }
                }
              }
            }
          }
        ]
      },
      "LoginResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "example": "jwt-token-example"
                  },
                  "id": {
                    "$ref": "#/components/schemas/Id"
                  }
                }
              }
            }
          }
        ]
      },
      "articleData": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/Id"
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "picture": {
            "type": "string"
          }
        },
        "required": ["id", "title", "content", "created_at", "updated_at"]
      },
      "addArticleData": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "picture": {
            "type": "string"
          }
        },
        "required": ["title", "content"]
      },
      "updateArticleData": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "picture": {
            "type": "string"
          }
        },
        "required": ["title", "content"]
      },
      "articleResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "$ref": "#/components/schemas/articleData"
              }
            }
          }
        ]
      },
      "addArticleResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "id": {
                    "$ref": "#/components/schemas/Id"
                  }
                }
              }
            }
          }
        ]
      },
      "updateArticleResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "id": {
                    "$ref": "#/components/schemas/Id"
                  }
                }
              }
            }
          }
        ]
      },
      "articleListResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "pagination": {
                    "$ref": "#/components/schemas/paginationData"
                  },
                  "data": {
                    "$ref": "#/components/schemas/articleData"
                  }
                }
              }
            }
          }
        ]
      },
      "announcementData": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/Id"
          },
          "content": {
            "type": "string"
          },
          "announcement_time": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          }
        }
      },
      "addAnnouncementData": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "announcement_time": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          }
        },
        "required": ["content", "announcement_time", "icon"]
      },
      "updateAnnouncementData": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "announcement_time": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          }
        },
        "required": ["content", "announcement_time", "icon"]
      },
      "announcementListResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/announcementData"
                }
              }
            }
          }
        ]
      },
      "addAnnouncementResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "$ref": "#/components/schemas/announcementData"
              }
            }
          }
        ]
      },
      "updateAnnouncementResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "id": {
                    "$ref": "#/components/schemas/Id"
                  }
                }
              }
            }
          }
        ]
      },
      "deleteAnnouncementResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CommonResponse"
          },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "id": {
                    "$ref": "#/components/schemas/Id"
                  }
                }
              }
            }
          }
        ]
      }
    }
  },
  "paths": {
    "/nozomi/register": {
      "post": {
        "summary": "用户注册",
        "tags": ["user"],
        "operationId": "registerUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegister"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "注册成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterResponse"
                }
              }
            }
          },
          "400": {
            "description": "注册失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/nozomi/login": {
      "post": {
        "summary": "用户登录",
        "tags": ["user"],
        "operationId": "loginUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "登录失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/nozomi/verify-token": {
      "post": {
        "summary": "验证Token有效性",
        "tags": ["user"],
        "operationId": "verifyToken",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserToken"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token有效",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CommonResponse"
                }
              }
            }
          },
          "400": {
            "description": "Token无效",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/nozomi/article": {
      "get": {
        "summary": "获取文章",
        "tags": ["article"],
        "operationId": "getArticle",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the account",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "获取文章成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/articleResponse"
                }
              }
            }
          },
          "400": {
            "description": "获取文章失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "新增文章",
        "tags": ["article"],
        "operationId": "addArticle",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/addArticleData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "新增文章成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/addArticleResponse"
                }
              }
            }
          },
          "400": {
            "description": "新增文章失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "更新文章",
        "tags": ["article"],
        "operationId": "updateArticle",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the account to update",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/updateArticleData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "更新文章成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/updateArticleResponse"
                }
              }
            }
          },
          "400": {
            "description": "更新文章失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/nozomi/articles-list": {
      "get": {
        "summary": "获取文章列表",
        "tags": ["article"],
        "operationId": "getArticleList",
        "responses": {
          "200": {
            "description": "获取所有文章",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/articleListResponse"
                }
              }
            }
          },
          "400": {
            "description": "获取失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/miku/announcements-list": {
      "get": {
        "summary": "获取公告列表",
        "tags": ["announcement"],
        "operationId": "getAnnouncementsList",
        "responses": {
          "200": {
            "description": "获取所有公告",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/announcementListResponse"
                }
              }
            }
          },
          "400": {
            "description": "获取失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/miku/announcement": {
      "post": {
        "summary": "新增公告",
        "tags": ["announcement"],
        "operationId": "addAnnouncement",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/addAnnouncementData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "新增公告成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/addAnnouncementResponse"
                }
              }
            }
          },
          "400": {
            "description": "新增公告失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "修改公告",
        "tags": ["announcement"],
        "operationId": "updateAnnouncement",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the announcement to update",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/updateAnnouncementData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "修改公告成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/updateAnnouncementResponse"
                }
              }
            }
          },
          "400": {
            "description": "修改公告失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "删除公告",
        "tags": ["announcement"],
        "operationId": "deleteAnnouncement",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the announcement to delete",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "删除公告成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/deleteAnnouncementResponse"
                }
              }
            }
          },
          "400": {
            "description": "删除公告失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/miku/articles-list": {
      "get": {
        "summary": "获取文章列表",
        "tags": ["article"],
        "operationId": "getArticleList",
        "responses": {
          "200": {
            "description": "获取所有文章",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/articleListResponse"
                }
              }
            }
          },
          "400": {
            "description": "获取失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  }
}
